<% @criterium.each do |t| %>
  <tr>
    <td><input type="checkbox"></td>

    <td><%= link_to '', edit_criterium_path(t), :class => 'glyphicon glyphicon-pencil', :data => {toggle: 'modal', target: '#myModal'}  %></td>
    <td><%= link_to '', t, method: :delete, :class=>'glyphicon glyphicon-trash' %></td>
    <td><%= link_to '', sort_up_criterium_path(t), :class=>'js-criterium-sort glyphicon glyphicon-arrow-up' %></td>
    <td><%= link_to '', sort_down_criterium_path(t), :class=>'js-criterium-sort glyphicon glyphicon-arrow-down' %></td>
  </tr>
<% end %>